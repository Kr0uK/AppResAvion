<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#BB33B5E5"
    tools:context="recherche.ChoixLieu"
    android:id="@+id/lieuLayout"
    android:foregroundGravity="top"
    android:gravity="fill_horizontal|top">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textAlignment="center"
        android:id="@+id/lieuTVnbResultats"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/lieuETchoixAeroport" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:maxHeight="40dp"
        android:id="@+id/lieuETchoixAeroport"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lieuTVnbResultats"
        android:paddingLeft="5dp"
        android:text="@string/lieuETchoixAeroport"
        android:background="@drawable/border"
        android:hint="@string/lieuHTlisteAeroports"
        android:inputType="textShortMessage"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lieuETchoixAeroport"
        android:layout_alignParentEnd="true" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@android:id/text1"
        android:paddingTop="2dip"
        android:paddingBottom="3dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/lieuETchoixAeroport"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
